<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- <item android:drawable="@drawable/forget_rent_focus" android:state_focused="true"/>
         <item android:drawable="@drawable/forget_rent_unfocused" android:state_focused="false"/>
     -->

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/badge_blue"
                android:endColor="@color/badge_blue"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/badge_blue" />
            <corners
                android:radius="50dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>
    <item  android:state_pressed="false"  >
        <shape>
            <gradient
                android:startColor="@color/badge_blue"
                android:endColor="@color/badge_blue"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/badge_blue" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="2dp"
                android:top="2dp"
                android:right="2dp"
                android:bottom="2dp" />
        </shape>
    </item>

</selector>