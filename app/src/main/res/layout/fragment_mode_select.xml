<?xml version="1.0" encoding="utf-8"?>

<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <data>
        <variable
            name="viewModelFragmentModeSelect"
            type="com.example.kotlinapplication.forFragment.FragmentModeSelect" />
    </data>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".forFragment.FragmentModeSelect">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/testV"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

            <RelativeLayout
                android:id="@+id/userList"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"

                android:layout_marginRight="30dp"
                android:layout_marginTop="250dp"
                android:background="#5555FF">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_baseline_list_alt_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="USER"
                    android:textColor="@color/white"
                    android:textSize="22dp"></TextView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/favoriteList"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/userList"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="30dp"
                android:background="#FFFF00">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/ic_baseline_favorite_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="FAVORITE"
                    android:textColor="#FFAA33"
                    android:textSize="22dp" />

            </RelativeLayout>
"


        </RelativeLayout>


    </FrameLayout>

</layout>


